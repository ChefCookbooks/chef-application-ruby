upstream <%= @app.application.name %>_upstream {
  server 127.0.0.1:8080 fail_timeout=0;
}

server {
  listen 80;
  server_name <%= ([@server_name] + @app.server_aliases).join(' ') %>;

  root <%= @app.path %>/current/public;

  access_log <%= node[:nginx][:log_dir] %>/<%= @app.application.name %>.access.log;
  error_log <%= node[:nginx][:log_dir] %>/<%= @app.application.name %>.error.log;
  
  location /nginx_status {
    stub_status on;
    access_log off;
    allow 127.0.0.0/24;
    deny all;
  }

  client_max_body_size 1024m;

  gzip on;
  gzip_http_version 1.1;
  gzip_comp_level 2;
  gzip_proxied any;
  gzip_types text/plain text/html text/css application/x-javascript text/xml application/xml application/xml+rss text/javascript;
  
  location / {

    proxy_buffer_size 16k;
    proxy_buffers 8 16k;
    proxy_busy_buffers_size 32k;
    proxy_set_header Host $host;

    if (-f $request_filename) {
       break;
     }

     if (!-f $request_filename) {
       proxy_pass http://<%= @app.application.name %>_upstream;
       break;
     }
   }

  error_page 500 502 503 504 /500.html;
  error_page 404 /404.html;

  location = /500.html {
    root <%= @app.path %>/current/public;
  }

  location = /400.html {
    root <%= @app.path %>/current/public;
  }
}
